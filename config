##### bindings #####
# bind i3lock
bindsym $mod+x exec i3lock -i ~/pictures/surface/lake.png
# bind file manager
bindsym $mod+q exec nautilus
# bind rofi to show
bindsym $mod+Tab exec rofi -combi-modi window#drun -show combi
# test print
bindsym --release Print exec scrot -s ~/pictures/screenshot/"$(date +\%Y-\%m-\%d) $(date +\%H:\%M).png" 
# start a terminal
bindsym $mod+Return exec gnome-terminal

##### startup excutable files #####
exec firefox
# change the scrolling direction
exec_always --no-startup-id synclient VertScrollDelta=-111
# choose the wallpaper
exec_always  feh --bg-scale /home/sheng/pictures/surface/red_lake.jpg

#### force APP to specific workspace ####
assign [class = "Firefox"]  $workspace1
assign [class = "Typora"]   $workspace3
assign [class = "Thunderbird"] $workspace10

##### output Control #####
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

#### force floating&focus mode #####
for_window [class=Firefox|Gnome-terminal] focus
for_window [class=Nautilus|Blueman-manager|Pavucontrol|Lxappearance] floating enable

### focus follows mouse or not
focus_follows_mouse yes







